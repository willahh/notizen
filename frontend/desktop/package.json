{
  "name": "notizen",
  "version": "0.1.1",
  "private": false,
  "description": "Notizen desktop app",
  "repository": "https://github.com/willahh/notizen",
  "author": {
    "name": "William Ravel",
    "email": "wravel@gmail.com"
  },
  "homepage": "/",
  "keywords": [
    "Electron"
  ],
  "dependencies": {
    "@testing-library/jest-dom": "^5.11.4",
    "@testing-library/react": "^11.1.0",
    "@testing-library/user-event": "^12.1.10",
    "@types/jest": "^26.0.15",
    "@types/node": "^12.0.0",
    "@types/react": "^17.0.0",
    "@types/react-dom": "^17.0.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "react": "^17.0.1",
    "react-dom": "^17.0.1",
    "react-scripts": "4.0.2",
    "realm": "^10.4.0",
    "typescript": "^4.1.2",
    "wait-on": "^5.2.1",
    "web-vitals": "^1.0.1",
    "webpack": "^5.35.0"
  },
  "devDependencies": {
    "electron": "11.2.3",
    "electron-builder": "^22.9.1",
    "electron-log": "^4.3.1",
    "electron-updater": "^4.3.5",
    "electron-window-state": "^5.0.3",
    "react-app-rewire-postcss": "^3.0.2",
    "react-app-rewired": "^2.1.6"
  },
  "scripts": {
    "react-start": "react-app-rewired start",
    "react-build": "react-app-rewired build",
    "react-test": "react-app-rewired test --env=jsdom",
    "react-eject": "react-app-rewired eject",
    "electron-build": "electron-builder",
    "set-gh-token-env": "export $(cat private/GH_TOKEN.txt | xargs)",
    "release": "yarn set-gh-token-env && yarn react-build && electron-builder --publish=always",
    "build": "yarn react-build && yarn electron-build",
    "start": "export PORT=3006 && concurrently \"cross-env BROWSER=none yarn run react-start\" \"wait-on http://localhost:3006 && electron .\"",
    "temp": "electron-builder"
  },
  "main": "public/electron.js",
  "build": {
    "appId": "com.notizenapp",
    "copyright": "Copyright williamravel.dev",
    "publish": {
      "provider": "github"
    },
    "mac": {
      "category": "public.app-category.productivity",
      "icon": "build/icon.icns"
    },
    "win": {
      "target": "zip"
    },
    "linux": {
      "category": "Utility"
    }
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "react-app/jest"
    ]
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  }
}
