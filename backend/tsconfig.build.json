{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true
  },
 
  "exclude": [
    "backend/node_modules",
    "../frontend/**/node_modules",
    "test",
    "dist",
    "**/*spec.ts"
  ]
}
